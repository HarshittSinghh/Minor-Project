<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Student Attendance</title>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <style>
        body { 
            font-family: 'Poppins', sans-serif;
            text-align: center; 
            background-color: #f4f9f9;
            margin: 0; 
            padding: 0; 
        }

        h1 {
            background-color: #7CB8C0;
            color: white;
            padding: 20px;
            margin: 0;
            border-radius: 0 0 15px 15px;
            font-size: 24px;
        }

        table { 
            width: 90%; 
            margin: 30px auto; 
            border-collapse: collapse; 
            background: white;
            border-radius: 12px;
            overflow: hidden;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.2);
        }

        th, td { 
            padding: 15px; 
            border-bottom: 1px solid #ddd; 
            text-align: center;
        }

        th {
            background: #7CB8C0;
            color: white;
            font-size: 18px;
        }

        tr:nth-child(even) { 
            background-color: #f2f2f2; 
        }

        tr:hover {
            background-color: #e0f2f1;
            transition: 0.3s ease-in-out;
        }

        .attendance-high { color: green; font-weight: bold; }
        .attendance-medium { color: orange; font-weight: bold; }
        .attendance-low { color: red; font-weight: bold; }

        @media (max-width: 768px) {
            table {
                width: 100%;
                font-size: 14px;
            }
            th, td {
                padding: 10px;
            }
        }

        #attendance-histogram {
            width: 80%;
            margin: 50px auto;
        }
    </style>
</head>
<body>

    <h1>üìä Student Attendance Report</h1>

    <table>
        <thead>
            <tr>
                <th>Name</th>
                <th>Total Days</th>
                <th>Days Present</th>
                <th>Days Absent</th>
                <th>Attendance %</th>
            </tr>
        </thead>
        <tbody>
            <% if (students && students.length > 0) { %>
                <% students.forEach(student => { %>
                    <tr>
                        <td><%= student.name %></td>
                        <td><%= student.totalDays %></td>
                        <td><%= student.daysPresent %></td>
                        <td><%= student.totalDays - student.daysPresent %></td>
                        <td>
                            <% if(student.attendancePercentage >= 75) { %>
                                <span class="attendance-high"><%= student.attendancePercentage %>% ‚úÖ</span>
                            <% } else if(student.attendancePercentage >= 50) { %>
                                <span class="attendance-medium"><%= student.attendancePercentage %>% ‚ö†Ô∏è</span>
                            <% } else { %>
                                <span class="attendance-low"><%= student.attendancePercentage %>% ‚ùå</span>
                            <% } %>
                        </td>
                    </tr>
                <% }); %>
            <% } else { %>
                <tr>
                    <td colspan="5">No student data available</td>
                </tr>
            <% } %>
        </tbody>
    </table>

    <div id="attendance-histogram">
        <canvas id="attendanceChart"></canvas>
    </div>

    <script>
        const studentNames = <%- studentNames %>;
        const attendancePercentages = <%- attendancePercentages %>;

        const ctx = document.getElementById('attendanceChart').getContext('2d');
        const attendanceChart = new Chart(ctx, {
            type: 'bar',
            data: {
                labels: studentNames,
                datasets: [{
                    label: 'Attendance Percentage',
                    data: attendancePercentages,
                    backgroundColor: '#7CB8C0',
                    borderColor: '#5C8B8A',
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true,
                scales: {
                    x: {
                        beginAtZero: true
                    },
                    y: {
                        beginAtZero: true,
                        max: 100
                    }
                }
            }
        });
    </script>

</body>
</html>
